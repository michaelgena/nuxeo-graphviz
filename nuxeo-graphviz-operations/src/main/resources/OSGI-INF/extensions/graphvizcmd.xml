	<extension
	    target="org.nuxeo.ecm.platform.commandline.executor.service.CommandLineExecutorComponent"
	    point="command">
			<command enabled="true" name="extract-studio-xml">
	          	<commandLine>unzip</commandLine>
		        <parameterString> -d #{dir} #{studioJar}</parameterString>
		        <installationDirective>Command unzip not found</installationDirective>
		    </command>
	</extension>
</component>